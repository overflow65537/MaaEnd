{
    "RealTimeAutoSkip": {
        "doc": "自动剧情入口",
        "recognition": "Or",
        // 防止背景变化过大，使用左上角和右上角两个画面进行匹配
        "any_of": [
            {
                // 匹配左上角log图标
                "recognition": "TemplateMatch",
                "threshold": 0.7, // 图片alpha值较低，难以匹配，阈值不能太高
                "template": "RealTimeTask/AutoSkipLog.png",
                "roi": [
                    10,
                    20,
                    55,
                    40
                ]
            },
            {
                // 匹配右上角Auto和Esc图标
                "recognition": "And",
                "all_of": [
                    {
                        "recognition": "TemplateMatch",
                        "threshold": 0.7, // 图片alpha值较低，难以匹配，阈值不能太高
                        "template": "RealTimeTask/AutoSkipA.png",
                        "roi": [
                            1140,
                            0,
                            120,
                            90
                        ]
                    },
                    {
                        "recognition": "TemplateMatch",
                        "threshold": 0.7, // 图片alpha值较低，难以匹配，阈值不能太高
                        "template": "RealTimeTask/AutoSkipEsc.png",
                        "roi": [
                            1140,
                            0,
                            120,
                            90
                        ]
                    }
                ]
            }
        ],
        "next": [
            "RealTimeAutoSkipAll",
            "RealTimeAutoSkipChoose",
            "RealTimeAutoSkipNext"
        ]
    },
    "RealTimeAutoSkipAll": {
        "doc": "自动跳过全部剧情",
        // 找右上角跳过按钮
        "recognition": "TemplateMatch",
        "threshold": 0.7,
        "green_mask": true,
        "template": "RealTimeTask/AutoSkipEsc.png",
        "roi": [
            1140,
            0,
            120,
            90
        ],
        "action": "Click"
    },
    "RealTimeAutoSkipChoose": {
        "doc": "自动跳过剧情中分支选择",
        // 找右侧区域是否有待选择的功能点
        "recognition": "TemplateMatch",
        "threshold": 0.9,
        "template": "RealTimeTask/AutoSkipTip.png",
        "roi": [
            900,
            400,
            300,
            300
        ],
        "action": "Click"
    },
    "RealTimeAutoSkipNext": {
        "doc": "自动点击剧情下一步",
        // 查找游戏下方三角形按钮
        "recognition": "TemplateMatch",
        "threshold": 0.7,
        "template": "RealTimeTask/AutoSkipNext.png",
        "roi": [
            630,
            690,
            20,
            25
        ],
        "action": "Click"
    }
}